/* pages/new/new.wxss */
.container{
    background-color: #fff;
}
.block{
    margin-bottom: 20rpx;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;

}
.block image{
    display: block;
    width: 100%;
    height: 400rpx;
    margin-bottom: 20rpx;

}
.block .title{
    margin-bottom: 12rpx;

}
.block .bottom{
    height: 60rpx;
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    align-items: flex-end;

}
.block .bottom .txt{
    color: #999999;
  
}
.block .bottom .btn{
    color:#fff ;
    background-color: #F5B43E;
    width: 20%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 60rpx;
}